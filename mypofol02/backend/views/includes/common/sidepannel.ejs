<user-draw-side-pannel>
    <input type="radio" name="side-pannel-toggle" id="side-pannel-open">
    <input type="radio" name="side-pannel-toggle" id="side-pannel-close" checked="checked">
    <label class="overlay-side-pannel" for="side-pannel-close"></label>        
    <div class="side-pannel">
        <div class="side-pannel-header">
            <div class="side-pannel-header-content-wrap">
                <div class="side-pannel-title-wrap">
                    <div class="d-flex">
                        <div class="side-pannel-user">
                            <img src="<%=req.session.authAccount.profileImage %>">
                        </div>
                        <div class="overflow-hidden d-flex width-full">
                            <div class="lh-condensed overflow-hidden d-flex flex-column ml-2 f5 mr-auto width-full">
                                <span class="title">
                                    <span><%=req.session.authAccount.name %></span>
                                </span>
                                <span class="title sub">
                                    <span><%=req.session.authAccount.profileName %></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="side-pannel-close-wrap">
                    <label for="side-pannel-close">
                        <svg aria-hidden="true" height="16" viewBox="0 0 16 16" version="1.1" width="16">
                            <path d="M3.72 3.72a.75.75 0 0 1 1.06 0L8 6.94l3.22-3.22a.749.749 0 0 1 1.275.326.749.749 0 0 1-.215.734L9.06 8l3.22 3.22a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215L8 9.06l-3.22 3.22a.751.751 0 0 1-1.042-.018.751.751 0 0 1-.018-1.042L6.94 8 3.72 4.78a.75.75 0 0 1 0-1.06Z"></path>
                        </svg>
                    </label>
                </div>
            </div>
        </div>

        <div class="side-pannel-body d-flex">
            <nav class="action-list">
                <ul>
                    <li>
                        <a href="/<%=req.session.authAccount.name %>">
                            <span class="action-list-item-ico">
                                <i class="fa fa-user"></i>
                            </span>
                            <span class="action-list-item-label">나의 포트폴리오</span>
                        </a>
                    </li>

                    <li></li>

                    <li>
                        <a href="/dashboard/profile">
                            <span class="action-list-item-ico">
                                <i class="fa fa-address-card"></i>
                            </span>
                            <span class="action-list-item-label">프로필 수정</span>
                        </a>
                    </li>

                    <li>
                        <a href="/dashboard/educations">
                            <span class="action-list-item-ico">
                                <i class="fa fa-graduation-cap"></i>
                            </span>
                            <span class="action-list-item-label">학력 수정</span>
                        </a>
                    </li>                        

                    <li>
                        <a href="/dashboard/experiences">
                            <span class="action-list-item-ico">
                                <i class="fa fa-list-ul"></i>
                            </span>
                            <span class="action-list-item-label">경력 수정</span>
                        </a>
                    </li>                        
              
                    <li>
                        <a href="/dashboard/trainings">
                            <span class="action-list-item-ico">
                                <i class="fa fa-award"></i>
                            </span>
                            <span class="action-list-item-label">교육 및 자격증 추가</span>
                        </a>
                    </li>  
                                        
                    <li>
                        <a href="/dashboard/projects">
                            <span class="action-list-item-ico">
                                <i class="fa fa-diagram-project"></i>
                            </span>
                            <span class="action-list-item-label">프로젝트 수정</span>
                        </a>
                    </li>          

                    <li>
                        <a href="/dashboard/skills">
                            <span class="action-list-item-ico">
                                <i class="fa fa-code"></i>
                            </span>
                            <span class="action-list-item-label">주요기술 수정</span>
                        </a>
                    </li>                        
                      
                    <li></li>

                    <li>
                        <a href="/download/pdf">
                            <span class="action-list-item-ico">
                                <i class="fa fa-file-pdf"></i>
                            </span>
                            <span class="action-list-item-label">이력서 다운로드</span>
                        </a>
                    </li>

                    <li></li>

                    <li>
                        <a href="/signout">
                            <span class="action-list-item-ico">
                                <i class="fa fa-right-from-bracket"></i>
                            </span>                                
                            <span class="action-list-item-label">로그아웃</span>
                        </a>
                    </li> 
                </ul>
            </nav>
        </div>
    </div>
</user-draw-side-pannel>    