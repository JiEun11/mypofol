use('sample-airbnb')

//
// $mod [(quotient),(result)]
// modulo operation
//

// ex1) 리뷰의 갯수가 10 단위로 달린 숙박 시설 검색 0는 제외
db.listingsAndReviews.find({
    number_of_reviews: {
        $gt: 0,
        $mod: [10, 0]
    }
}, {
    title: 1,
    number_of_reviews: 1
})

db.listingsAndReviews.find({
    $and: [
        { number_of_reviews: { $gt: 0 }, },
        { number_of_reviews: { $mod: [10, 0] } }
    ]
}, {
    title: 1,
    number_of_reviews: 1
})