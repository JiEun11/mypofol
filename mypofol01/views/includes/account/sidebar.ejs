<div class="sidebar">
    <div class="sidebar-header">
        <div class="profile-pic">
            <a href="#">
                <img src="<%=req.account.imageProfile %>">
            </a>
        </div>
        <h1 class="vcard-names">
            <span class="name"><%=req.account.account %></span>
            <span class="title"><%=req.account.title %></span>
        </h1>
    </div>
    <div class="sidebar-content">
        <nav class="navbar">
            <ul>
                <li class="<%=(active == 'profile' ? 'nav-active' : '') %>">
                    <a href="/<%=req.account.account %>/profile">
                        <span class="item-ico"><i class="fa fa-address-card"></i></span>
                        <span class="item-label">프로필</span>
                    </a>
                </li>
                <li class="<%=(active == 'experiences' ? 'nav-active' : '') %>">
                    <a href="/<%=req.account.account %>/experiences">
                        <span class="item-ico"><i class="fa fa-list-ul"></i></span>
                        <span class="item-label">경력</span>
                    </a>
                </li>
                <li class="<%=(active == 'educations' ? 'nav-active' : '') %>">
                    <a href="/<%=req.account.account %>/educations">
                        <span class="item-ico"><i class="fa fa-graduation-cap"></i></span>
                        <span class="item-label">학력</span>                                    
                    </a>
                </li>
                <li class="<%=(active == 'trainings' ? 'nav-active' : '') %>">
                    <a href="/<%=req.account.account %>/trainings">
                        <span class="item-ico"><i class="fa fa-award"></i></span>
                        <span class="item-label">교육 및 자격증</span>                                   
                    </a>
                </li>
                <li class="<%=(active == 'skills' ? 'nav-active' : '') %>">
                    <a href="/<%=req.account.account %>/skills">
                        <span class="item-ico"><i class="fa fa-code"></i></span>
